@page
@model ClassroomBooking.Presentation.Pages.Manager.Rooms.IndexModel
@{
    ViewData["Title"] = "Manage Rooms";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Manage Rooms</h2>
    <a asp-page="Create" class="btn btn-primary mb-3">Create New Room</a>

    @if (Model.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger">
            @foreach (var error in Model.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Room Name</th>
                <th>Capacity</th>
                <th>Campus</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model.Rooms)
            {
                <tr>
                    <td>@room.RoomName</td>
                    <td>@room.Capacity</td>
                    <td>@room.Campus?.CampusName</td>
                    <td>@room.Status</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@room.RoomId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="Delete" asp-route-id="@room.RoomId" class="btn btn-sm btn-danger">Delete</a>
                        <a asp-page="Details" asp-route-id="@room.RoomId" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Pagination Controls -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <div>
            <p>Page @Model.CurrentPage of @Model.TotalPages</p>
        </div>
        <div>
            <!-- Previous Button -->
            @if (Model.CurrentPage > 1)
            {
                <a asp-page="/Manager/Rooms/Index" asp-route-pageNumber="@(Model.CurrentPage - 1)" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Previous
                </a>
            }
            else
            {
                <button class="btn btn-secondary" disabled>
                    <i class="bi bi-arrow-left"></i> Previous
                </button>
            }

            <!-- Next Button -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a asp-page="/Manager/Rooms/Index" asp-route-pageNumber="@(Model.CurrentPage + 1)" class="btn btn-secondary ms-2">
                    Next <i class="bi bi-arrow-right"></i>
                </a>
            }
            else
            {
                <button class="btn btn-secondary ms-2" disabled>
                    Next <i class="bi bi-arrow-right"></i>
                </button>
            }
        </div>
    </div>
</div>