@page
@model ClassroomBooking.Presentation.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="width: 400px;">
        <h2 class="text-center mb-4">Login</h2>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">User Code:</label>
                <input type="text" class="form-control" asp-for="LoginVM.UserCode" placeholder="Enter your user code" required />
                <span asp-validation-for="LoginVM.UserCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Password:</label>
                <input type="password" class="form-control" asp-for="LoginVM.Password" placeholder="Enter your password" required />
                <span asp-validation-for="LoginVM.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3 text-center">@Model.ErrorMessage</div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />